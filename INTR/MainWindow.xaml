<Window x:Class="INTR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INTR"
        mc:Ignorable="d"
        Title="Mi Primer ventana" Height="600" Width="900">
    <!-- Contenedor -->
    <StackPanel>
    <!--Texto Plano -->
        <!--
        Orden de margen:
        Left, Top, Right, Botton
        -->
            <TextBlock TextAlignment="Center" Margin="20,15,20,0">Correo:</TextBlock>
        <!--Caja para introducir texto-->
        <TextBox Margin="250,15,250,0"></TextBox>
        <TextBlock TextAlignment="Center" Margin="20,15,20,0">Contraseña:</TextBlock>
        <TextBox Margin="250,15,250,0"></TextBox>
        <Button Margin="400,15,400,0">Iniciar sesión</Button>
    </StackPanel>
</Window>